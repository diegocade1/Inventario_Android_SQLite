<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF">

        <TextView
            android:id="@+id/lblCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codigo"
            android:textSize="40dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/btnTipoCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Cod/Cod"
            android:layout_toRightOf="@id/lblCodigo" />

        <EditText
            android:id="@+id/txtCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblCodigo"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/llSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCodigo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblTituloCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cant:"
                android:textSize="20dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/txtCantidad"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/lblTituloCantidad"
                android:inputType="number" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llThird"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/txtCodigo"
            android:orientation="vertical"
            android:paddingTop="60dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/lblUltimoCodigo"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ultimo Codigo:"
                android:textSize="20dp"
                android:paddingBottom="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lblCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad:"
                android:textSize="20dp"
                android:paddingBottom="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lblUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario:"
                android:textSize="20dp"
                android:paddingBottom="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lblUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicacion:"
                android:textSize="20dp"
                android:paddingBottom="20dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:text="Regresar"
                android:visibility="gone"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llForth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCodigo"
            android:layout_toRightOf="@+id/llThird"
            android:gravity="center_horizontal|left"
            android:orientation="vertical"
            android:paddingTop="60dp"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/lblTextUltimoCodigo"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ultimo Codigo"
                android:textSize="20dp"
                android:paddingBottom="20dp"/>

            <TextView
                android:id="@+id/lblTextCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Cantidad"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lblTextUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Usuario"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lblTextUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Ubicacion"
                android:textSize="20dp" />
            <Button
                android:id="@+id/btnLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:text="Lista"
                android:visibility="visible"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>